AC_INIT(src/Game.cpp)
AM_INIT_AUTOMAKE(glob2, 0.1)
AM_CONFIG_HEADER(config.h)

CXXFLAGS="-g -Wall -lpng $CXXFLAGS"

dnl Programs 
AC_PROG_CC
AC_PROG_CXX
AC_PROG_INSTALL
AC_PROG_RANLIB

dnl Libraries

dnl Header files
AC_STDC_HEADERS
AC_HAVE_HEADERS(string.h sys/time.h assert.h)

AC_LANG_C

dnl Check for SDL
SDL_VERSION=1.2.0
AM_PATH_SDL($SDL_VERSION,
:,
AC_MSG_ERROR([*** SDL version $SDL_VERSION not found!])
)
dnl CFLAGS="$CFLAGS $SDL_CFLAGS"
dnl LIBS="$LIBS $SDL_LIBS"

AC_LANG_CPLUSPLUS


AC_CHECK_HEADERS(vector,,AC_MSG_WARN(STL classes missing ?))

dnl Set PACKAGE_DATA_DIR in config.h.
if test "x${datadir}" = 'x${prefix}/share'; then
  if test "x${prefix}" = "xNONE"; then
    AC_DEFINE_UNQUOTED(PACKAGE_DATA_DIR, "${ac_default_prefix}/share/${PACKAGE}")
  else
    AC_DEFINE_UNQUOTED(PACKAGE_DATA_DIR, "${prefix}/share/${PACKAGE}")
  fi
else
  AC_DEFINE_UNQUOTED(PACKAGE_DATA_DIR, "${datadir}/${PACKAGE}")
fi

dnl Set PACKAGE_SOURCE_DIR in config.h.
packagesrcdir=`cd $srcdir && pwd`
AC_DEFINE_UNQUOTED(PACKAGE_SOURCE_DIR, "${packagesrcdir}")

AC_OUTPUT([Makefile src/Makefile doc/Makefile tools/Makefile  data/Makefile 
data/gfx/Makefile
data/fonts/Makefile
data/gui/Makefile
] )

