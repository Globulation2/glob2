import os

Import("env")

for file in os.listdir("."):
    if file.find(".png") != -1:
        env.Tar(env["TARFILE"], file)
        env.Install(env["INSTALLDIR"]+"/glob2/data/gfx/cursor", file)

env.Alias("install", env["INSTALLDIR"]+"/glob2/data/gfx/cursor")

env.Tar(env["TARFILE"], "SConscript")
