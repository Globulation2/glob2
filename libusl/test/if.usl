val true = {
	def select (trueVal, falseVal) = trueVal
	this ()
}

val false = {
	def select (trueVal, falseVal) = falseVal
	this ()
}

def iff(cond) = {
	def nil = .
	def apply (def trueVal) = cond select (trueVal, nil) ()
}

def if(cond) = {
	def apply (def trueVal) = {
		def else (def falseVal) = cond select (trueVal, falseVal) ()
		this ()
	}
	this ()
}

