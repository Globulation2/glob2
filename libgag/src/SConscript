libgag_sources = Split("""
BinaryStream.cpp      GUIStyle.cpp
CursorManager.cpp     GUITextArea.cpp
FileManager.cpp       GUIText.cpp
FormatableString.cpp  GUITextInput.cpp
GraphicContext.cpp    KeyPress.cpp
GUIAnimation.cpp      Sprite.cpp
GUIBase.cpp           StreamBackend.cpp
GUIButton.cpp         Stream.cpp
GUIFileList.cpp       StreamFilter.cpp
GUIKeySelector.cpp    StringTable.cpp
GUIList.cpp           SupportFunctions.cpp
GUIMessageBox.cpp     TextStream.cpp
GUINumber.cpp         Toolkit.cpp
GUIRatio.cpp          TrueTypeFont.cpp
GUISelector.cpp       win32_dirent.cpp""").sort()



Import("env")
l = env.Library("gag", libgag_sources)
Default(l)

import os

for file in os.listdir("."):
    if file.find(".cpp") != -1:
        env.Tar(env["TARFILE"], file)

env.Tar(env["TARFILE"], "SConscript")
